{
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".vue", ".ts", ".d.ts"]
      },
      "alias": {
        "extensions": [".vue", ".js", ".ts", ".scss", ".d.ts"],
        "map": [
          ["@components/*", "./src/common/components/*"],
          ["@/pages", "./src/pages"],
          ["@/router", "./src/router"],
          ["@/store", "./src/store"],
          ["@/styles", "./src/styles"],
          ["@/types", "./src/types"],
          ["@/utils", "./src/utils"]
        ]
      }
    }
  }
}
